{% extends "layout.njk" %}
{% block head %}
    <title>Portifolio - Willames</title>
{% endblock %}
{% block content %}

    <div id="wrapper">
        <h1>Aulas</h1>
    </div>

    <section class="cards">

        {% for item in itens %}

            <div class="card" id="{{item.id}}">

                <div class="{{ 'featured-wrapper' if item.featured }} card_image-container">
                    <img src="https://img.youtube.com/vi/{{item.id}}/maxresdefault.jpg" alt="{{item.title}}">
                    {% if item.featured %}
                        <div class="featured">Featured</div>
                    {% endif %}
                </div>

                <div class="card_content">
                    <p>{{item.title}}</p>
                </div>

                <div class="card_info">
                    <p>
                        {{item.duration}}
                    </p>
                    <p class="card_price">{{item.price}}
                    </p>
                </div>
            </div>
        {% endfor %}

    </section>

   

    <script src="/script.js"></script>

{% endblock %}